[Unit]
Description=mod-host
After=jack2.service

[Service]
Type=forking
Environment=LV2_PATH=/home/pi/zynthian/zynthian-plugins/lv2:/usr/lib/lv2:/usr/local/lib/lv2
Environment=HOME=/root
WorkingDirectory=/home/pi
ExecStart=/usr/local/bin/mod-host
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
#WantedBy=network.target
