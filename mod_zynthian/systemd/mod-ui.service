[Unit]
Description=mod-ui

[Service]
Environment=HOME=/home/pi
Environment=LV2_PATH=/home/pi/.lv2:/home/pi/zynthian/zynthian-plugins/mod-lv2
Environment=MOD_DEV_ENVIRONMENT=0
Environment=MOD_SCREENSHOT_JS=/home/pi/zynthian/zynthian-sw/mod-ui/screenshot.js
Environment=MOD_PHANTOM_BINARY=/usr/bin/phantomjs
Environment=MOD_DEVICE_WEBSERVER_PORT=8888
WorkingDirectory=/home/pi/zynthian/zynthian-sw/mod-ui
ExecStart=/home/pi/zynthian/zynthian-sw/mod-ui/server.py
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
#WantedBy=network.target
