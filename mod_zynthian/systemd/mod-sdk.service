[Unit]
Description=mod-sdk
Requires=mod-ui.service
After=mod-ui.service

[Service]
Environment=HOME=/home/pi
Environment=LV2_PATH=/home/pi/.lv2:/home/pi/zynthian/zynthian-plugins/mod-lv2
Environment=MOD_SCREENSHOT_JS=/home/pi/zynthian/zynthian-sw/mod-sdk/screenshot.js
Environment=MOD_PHANTOM_BINARY=/usr/bin/phantomjs
WorkingDirectory=/home/pi/zynthian/zynthian-sw/mod-sdk
ExecStart=/home/pi/zynthian/zynthian-sw/mod-sdk/development_server.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
#WantedBy=network.target
